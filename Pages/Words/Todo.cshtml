@page
@model VanbaApp.Pages.Words.TodoModel

@{
    ViewData["Title"] = "Fehlende Worte";
}

<h1>Fehlende Worte</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Word[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Word[0].MeaningAsNoun)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Word[0].MeaningAsVerb)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Word[0].MeaningAsAdjective)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Word) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeaningAsNoun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeaningAsVerb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeaningAsAdjective)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
